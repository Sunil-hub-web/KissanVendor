<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/two_hundred"
                android:src="@drawable/loginpage_img"
                android:layout_margin="@dimen/thirty"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Welcome Back -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/welback">

                    <TextView
                        android:id="@+id/welcome_bac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/thirty"
                        android:text="@string/welcome_bac"
                        android:textAppearance="@style/welcome_bac" />


                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="@dimen/fifty"
                        android:layout_height="@dimen/seventy"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/thirty"
                        android:src="@drawable/back_btn" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/welback"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/thirty"
                    android:layout_marginLeft="@dimen/twenty_five"
                    android:layout_marginRight="@dimen/twenty_five">

                    <TextView
                        android:id="@+id/e_mail_mobi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/fifteen"
                        android:gravity="top"
                        android:text="@string/e_mail_mobi"
                        android:textAppearance="@style/e_mail_mobi" />

                    <EditText
                        android:id="@+id/mobilenumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:layout_marginTop="@dimen/four"
                        android:background="@drawable/rectangle_3"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/fifteen"
                        android:paddingRight="@dimen/fifteen" />


                    <TextView
                        android:id="@+id/password_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/fifteen"
                        android:layout_marginTop="@dimen/ten"
                        android:gravity="top"
                        android:text="@string/password"
                        android:textAppearance="@style/e_mail_mobi" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:layout_marginTop="@dimen/four"
                        android:background="@drawable/rectangle_3"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/fifteen"
                        android:paddingRight="@dimen/fifteen" />


                    <TextView
                        android:id="@+id/forgot_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/fifteen"
                        android:gravity="top"
                        android:text="@string/forgot_pass"
                        android:textAppearance="@style/forgot_pass" />


                    <Button
                        android:id="@+id/login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:layout_marginTop="@dimen/fifteen"
                        android:background="@drawable/drawable_rectangle_1"
                        android:text="@string/log_in"
                        android:textAppearance="@style/continue_wi" />

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>





</LinearLayout>